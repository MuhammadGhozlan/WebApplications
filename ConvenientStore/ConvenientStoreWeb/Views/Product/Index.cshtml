@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-6">Product List</div>
        <div class="col-6 text-end"><a asp-controller="Product" asp-action="Create" class="btn btn-primary bg-black text-white">Create New Product</a></div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>ItemDate</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.ProductName</td>
                        <td>@obj.Quantity</td>
                        <td>@obj.ItemDate.ToShortDateString()</td>
                        <td> <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2 w-30" style="width:75px">&nbsp;<i class="bi bi-vector-pen"></i>Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2 w-30" style="width:105px">&nbsp;<i class="bi bi-trash3"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

