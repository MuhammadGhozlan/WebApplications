@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    @*<input asp-for="Id" hidden /> this is in case you used Id instead of obj(instance of the category)*@
    <div class="border m-4">
        <div class="row pb-3">
            <h2 class="text-primary text-black">Delete a Category</h2>
            <div class="p-2">
                <label asp-for="Name"></label>
                <input asp-for ="Name" class="form-control" disabled />
            </div>

            <div class="p-2">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control" disabled />
            </div>
            <button type="submit" class="btn btn-primary m-2" style="width: 100px">Delete</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary m-2" style="width:100px">Back to the List</a>

        </div>
    </div>
</form>

