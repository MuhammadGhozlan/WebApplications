@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            Movies List
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Movie" asp-action="Create" class="text-secondary">Add New Movie</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Movie's ID</th>
                <th>Movie's Name</th>
                <th>Time of Selling</th>
                <th>Quantity</th>
                <th>Number of Copies</th>
                <th>Remaining Copies</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                <td>@obj.Id</td>
                <td>@obj.MovieName</td>
                <td>@obj.TimeOfSelling.ToShortDateString()</td>
                <td>@obj.Quantity</td>
                <td>@obj.NumbersOfCopies</td>
                <td>@obj.Copies()</td>
                <td><div class="w-75 btn-group" role="group">
                    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2"><i class="bi bi-wrench"></i>&nbsp;Edit</a>
                    </div>
                    </td>
                    <td> <div class="w-50 btn-group" role="group">
                        <a asp-controller="Movie" asp-action="Delete" asp-route-id="@obj.Id"
                    class="btn btn-secondary mx-2"><i class="bi bi-trash"></i>&nbsp;Delete</a>
                        </div> 
                   </td>


                </tr>
            }

        </tbody>
    </table>

</div>


