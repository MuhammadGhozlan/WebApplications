@model IEnumerable<Patient>

<div class="container p-3">
   <div class="row pt-2">
        <div class="col-6"><h3 class="text-primary">Patients' List</h3></div>
        <div class="col-6 text-end"><a asp-controller="Patient" asp-action="CreatePatient" class="btn btn-primary bg-black text-white">&nbspAdd Patient</a></div>
   </div>
   <br/>
   <br/>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
           <th>Patient ID</th>
            <th>Patient Name</th>
            <th>Patient Age</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">@obj.Id</td>
                <td width="30%">@obj.Name</td>
                <td width="20%">@obj.Age</td>
                <td width="15%">
                  <div class="w-75 btn-group" role="group">
                            <a asp-controller="Patient" asp-action="Edit" asp-route-id="@obj.Id"
                           class="mx-2 btn btn-secondary"><i class="bi bi-tools"></i>&nbsp Update</a>
                  </div>
                </td>
                
                <td width="15%">
                  <div class="w-75 btn-group" role="group">
                      <a asp-controller="Patient" asp-action="Delete" asp-route-id="@obj.Id"
                           class="mx-2 btn btn-secondary"><i class="bi bi-trash2-fill"></i>&nbsp Delete</a>
                  </div>
                </td>
                
                 
            </tr>

        }
    </tbody>
</table>
</div>