@model Patient
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="row p-3"><h2 class="text-black text-primary">Delete</h2></div>

    <div class="p-2">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled/>
    </div>
    <div class="p-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" disabled />
    </div>
    <button type="submit" class="btn btn-primary" style="width:30%" onclick="return confirm('Are You Sure You Want to Delete: @Model.Name?')">Delete</button>
    <a asp-controller="Patient" class="btn btn-secondary" asp-action="Index" style="width:30%">Back to List</a>
</form>
